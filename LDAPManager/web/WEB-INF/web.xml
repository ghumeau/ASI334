<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>LoginView</servlet-name>
        <servlet-class>fr.ensta.ldapmanager.control.LoginView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginView</servlet-name>
        <url-pattern>/secure/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LDAPView</servlet-name>
        <servlet-class>fr.ensta.ldapmanager.control.LDAPView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LDAPView</servlet-name>
        <url-pattern>/private/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutView</servlet-name>
        <servlet-class>fr.ensta.ldapmanager.control.LogoutView</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutView</servlet-name>
        <url-pattern>/public/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>1</session-timeout>
    </session-config>
</web-app>
